<div class="page-section">
  <h1 class="font-bold text-2xl">{{ flavour }}: {{ variant }}</h1>

  <ul class="mt-8">
  {%- for item in collections[coll].items[variant] -%}
  <li class="interest-box">
    <a href="{{ item.url }}">
      <div class="font-bold">{{ item.data.title }}</div>
      <div class="text-sm mt-2">{{ item.data.summary }}</div>
      <div>read more...</div>
    </a>
  </li>
  {%- endfor -%}
  </ul>
</div>
