{
  "name": "refresher",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:simonhildebrandt/refresher.git",
  "author": "Simon Hildebrandt <simonhildebrandt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:css": "postcss css/styles.css -o assets/bundle.css",
    "watch:css": "postcss css/styles.css -o assets/bundle.css -w",
    "build:sodapop:css": "postcss css/sodapop-search.css -o assets/sodapop-search.css",
    "watch:sodapop:css": "postcss css/sodapop-search.css -o assets/sodapop-search.css -w",
    "build:react": "yarn esbuild src/index.jsx --bundle --outfile=assets/index.js",
    "watch:react": "yarn esbuild src/index.jsx --bundle --outfile=assets/index.js --watch",
    "publish": "yarn build:css && yarn build:sodapop:css && yarn build:react && eleventy",
    "start": "eleventy --serve"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@photogabble/eleventy-plugin-interlinker": "^1.1.2",
    "@tailwindcss/postcss": "^4.1.18",
    "axios": "^1.13.2",
    "esbuild": "^0.27.2",
    "lunr": "^2.3.9",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "tailwindcss": "^4.1.18"
  }
}
